
.market-left.pull-left
  .search
    = form_tag search_path, method: :get, class: 'search-form', remote: true do
      = label_tag "Search for"
      .clearfix
      = text_field_tag :term
      .clearfix
      = label_tag "Quantity needed"
      .clearfix
      = number_field_tag :quantity
      .clearfix
      = label_tag "Near"
      .clearfix
      = text_field_tag :place
      .clearfix
      = hidden_field_tag :geolocation, "(#{session[:lat]}, #{session[:lng]})"
      = hidden_field_tag :page, 1
      = button_tag type: :submit, class: 'search_button' do
        = "Search"
        %i.fa.fa-search
  #map
  #existing-bids.modal
    .existing-bids.modal-sm
.market-right.pull-left
  .filter-links.pull-right
    filter
    .fa.fa-th.filter-grid
    .fa.fa-align-justify.filter-row.current-filter
  .clearfix
  .result-row-view
    .results-headder
      .results-headder-item.pull-left
        Item
      .results-headder-item.pull-left
        Distance
      .results-headder-item.pull-left
        Rate (Per Kg)
      .results-headder-item.pull-left
        Total
      .clearfix
    .results-body{data:{results_per_page: ShopSearch::RESULTS_PER_PAGE}}
      .results-wait
        = image_tag 'giphy.gif'
  .result-grid-view.hidden
  .load-more-button.hidden{data: {page: 1}}
    = "Load more"


