.user-form-box.pull-left
  
  .devise-user-form.pull-left
    %h2 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name, required: true, autofocus: true, placeholder: 'Name'
        = f.input :email, required: true, placeholder: 'Email'
        - unless session[:social_auth]
          = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Password'
          = f.input :password_confirmation, required: true, placeholder: "Password Confirmation"
      
        = f.input :address, placeholder: 'Address'
        = f.input :pincode, placeholder: 'Pincode'
        = f.input :phone_number, placeholder: 'Phone Number'
      .form-actions
        = f.button :submit, "Sign Up"
    = render "devise/shared/links"
  .social-sign-ins.pull-left
    = render partial: 'devise/social_sign_in_links'
  .clearfix
