.shop-attributes
  = @shop.name
  %br
  = @shop.address.gsub('\n', '<br />')
  %br
  = @shop.phone_number
  %br
  = link_to "edit", edit_seller_shop_path(@shop)
.profile-sub-nav
  = link_to seller_shop_inventory_path(@shop) do
    .profile-sub-nav-item{class: action_name == 'inventory' ? "current-profile-item" : ''}
      = "Inventory"
  = link_to seller_shop_open_bids_path(@shop) do
    .profile-sub-nav-item{class: action_name == 'open_bids' ? "current-profile-item" : ''}
      = "Open Bids"
  = link_to seller_shop_past_purchases_path(@shop) do
    .profile-sub-nav-item{class: action_name == 'past_purchases' ? "current-profile-item" : ''}
      = "Past Purchases"
  .clearfix