= render partial: 'profile_sub_nav'
.open-bids-container
  - bid_count = 0
  - @product_bids.each do |bid|
    - bid_count += 1
    = render partial: '/bids/bid', locals: {bid: bid, public: false, seller: true, past_purchases: false,  new_bid: @new_bid_count >= bid_count}

  - if @product_bids.count == 0
    .no-items-message
      No bids have been made to your products